<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "template.dtd">
<template>
<title>Kopano User Account</title>
<regexp>ou=.*</regexp>
<icon>ldap-user.png</icon>
<description>New Kopano User Account</description>
<askcontainer>1</askcontainer>
<rdn>cn</rdn>
<visible>1</visible>

<objectClasses>
<objectClass id="simpleSecurityObject"></objectClass>
<objectClass id="kopano-user"></objectClass>
<objectClass id="inetOrgPerson"></objectClass>
</objectClasses>

<attributes>
<attribute id="cn">
        <display>Common Name (usually: 'Firstname Lastname')</display>
        <order>3</order>
        <page>1</page>
</attribute>

<attribute id="givenName">
        <display>First name</display>
        <icon>ldap-user.png</icon>
        <onchange>=autoFill(cn;%givenName% %sn%)</onchange>
<!--        <onchange>=autoFill(uid;%givenName%.%sn%@DOMAIN)</onchange> -->
        <order>1</order>
        <page>1</page>
</attribute>
<attribute id="sn">
        <display>Last name</display>
        <onchange>=autoFill(cn;%givenName% %sn%)</onchange>
<!--        <onchange>=autoFill(uid;%givenName%.%sn%@DOMAIN)</onchange> -->
        <order>2</order>
        <page>1</page>
</attribute>
<attribute id="uid">
        <display>Login Name (usually the Email address)</display>
        <hint>required</hint>
        <onchange>=autoFill(mail;%uid%)</onchange>
        <order>3</order>
        <page>1</page>
</attribute>
<attribute id="userPassword">
  <display>Password</display>
  <hint>Encryption types: crypt OR ssha (default)</hint>
    <helper>
      <default>ssha</default>
      <display>Encryption</display>
      <id>enc</id>
      <location>side</location>
      <option>crypt</option>
      <option>ssha</option>
    </helper>
  <icon>lock.png</icon>
  <order>4</order>
  <page>1</page>
  <post>=php.Password(%enc%,%userPassword%)</post>
  <spacer>1</spacer>
  <type>password</type>
  <verify>1</verify>
</attribute>

