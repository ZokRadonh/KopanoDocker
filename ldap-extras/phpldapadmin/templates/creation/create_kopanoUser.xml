<attribute id="mail">
        <display>Email</display>
        <icon>mail.png</icon>
        <order>5</order>
        <page>1</page>
</attribute>
<attribute id="kopanoAliases">
   <display>Mail Alias</display>
   <hint>Other email addresses that will be delivered to this account. More aliases can be added later.</hint>
   <icon>mail.png</icon>
   <max>5</max>
   <order>6</order>
   <page>1</page>
</attribute>
<attribute id="telephoneNumber">
        <display>Work phone</display>
        <icon>phone.png</icon>
        <order>8</order>
        <page>1</page>
</attribute>
<attribute id="facsimileTelephoneNumber">
        <display>Fax</display>
        <order>9</order>
        <page>1</page>
</attribute>
<attribute id="mobile">
        <display>Mobile</display>
        <order>9</order>
        <page>1</page>
        <spacer>1</spacer>
</attribute>
<attribute id="kopanoEnabledFeatures">
   <display>Kopano Enabled Feature, one per field.</display>
   <hint>Possible values: imap pop3 mobile outlook webapp</hint>
   <icon>mail.png</icon>
   <max>5</max>
   <order>10</order>
   <page>1</page>
</attribute>
<attribute id="kopanoDisabledFeatures">
   <display>Kopano Disabled Feature, one per field.</display>
   <hint>Possible values: imap pop3 mobile outlook webapp</hint>
   <icon>mail.png</icon>
   <max>5</max>
   <order>11</order>
   <page>1</page>
</attribute>
<attribute id="kopanoAdmin">
   <display>Kopano Administrator</display>
   <order>1</order>
   <page>2</page>
</attribute>
<attribute id="kopanoQuotaWarn">
   <display>Quota Warning (MB)</display>
   <order>2</order>
   <page>2</page>
</attribute>
<attribute id="kopanoQuotaSoft">
   <display>Soft Quota (MB)</display>
   <order>3</order>
   <page>2</page>
</attribute>
<attribute id="kopanoQuotaHard">
   <display>Hard Quota (MB)</display>
   <order>4</order>
   <page>2</page>
</attribute>
<attribute id="kopanoQuotaOverride">
   <display>Override Quota limits</display>
   <order>5</order>
   <page>2</page>
</attribute>
</attributes>
</template>
