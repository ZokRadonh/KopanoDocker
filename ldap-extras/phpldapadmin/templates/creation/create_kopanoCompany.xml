<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "template.dtd">
<template>
<title>Kopano Company</title>
<regexp>dc=.*</regexp> 
<icon>ldap-o.png</icon>
<description>Kopano Company</description>
<askcontainer>1</askcontainer>
<rdn>ou</rdn>
<visible>1</visible>

<objectClasses>
<objectClass id="organizationalUnit"></objectClass>
<objectClass id="kopano-company"></objectClass>
</objectClasses>

<attributes>
<attribute id="ou">
        <description> Unit</description>
        <display>Organisational Unit (usually: domain name)</display>
        <hint>don't include 'ou='</hint>
        <order>1</order>
        <page>1</page>
</attribute>

<attribute id="kopanoViewPrivilege">
        <description> KopanoViewPrivilege</description>
        <display>View Privilege</display>
        <hint>Companies with view privileges over selected company</hint>
        <order>4</order>
        <page>1</page>
</attribute>

<attribute id="kopanoSystemAdmin">
        <description>KopanoSystemAdmin</description>
        <display>Admin Privilege</display>
        <hint>The user who is the system administrator for this company</hint>
        <order>3</order>
        <page>1</page>
</attribute>

<attribute id="kopanoQuotaOverride">
        <description>KopanoQuotaOverride</description>
        <display>Quota Override</display>
        <hint>Override child quota</hint>
        <order>5</order>
        <page>1</page>
</attribute>
<attribute id="kopanoUserDefaultQuotaWarn">
        <description>kopanoUserDefaultQuotaWarn</description>
        <display>User Default Quota Warn</display>
        <hint>User default warning quota size in MB</hint>
        <order>6</order>
        <page>1</page>
</attribute>

<attribute id="kopanoUserDefaultQuotaSoft">
        <description>kopanoUserDefaultQuotaSoft</description>
        <display>User Default Quota Soft</display>
        <hint>User default soft quota size in MB</hint>
        <order>7</order>
        <page>1</page>
</attribute>

<attribute id="kopanoUserDefaultQuotaHard">
        <description>kopanoUserDefaultQuotaHard</description>
        <display>User Default Quota Hard</display>
        <hint>User default hard quota size in MB</hint>
        <order>8</order>
        <page>1</page>
</attribute>

<attribute id="kopanoQuotaUserWarningRecipients">
        <description>kopanoQuotaUserWarningRecipients</description>
        <display>Quota User Warning Recipients</display>
        <hint>Users who will recieve a notification email when a user exceeds his quota</hint>
        <order>9</order>
        <page>1</page>
</attribute>

<attribute id="kopanoQuotaCompanyWarningRecipients">
        <description>kopanoQuotaCompanyWarningRecipients</description>
        <display>Quota Company Warning Recipients</display>
        <hint>Users who will recieve a notification email when a company exceeds its quota</hint>
        <order>10</order>
        <page>1</page>
</attribute>
</attributes>
</template>
