<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "template.dtd">
<template>
	<title>
		Zarafa User Account
	</title>
	<regexp>
		ou=.*
	</regexp>
	<icon>
		images/user.png
	</icon>
	<description>
		New Zarafa User Account
	</description>
	<askcontainer>
		1
	</askcontainer>
	<rdn>
		cn
	</rdn>
	<visible>
		1
	</visible>
	<objectClasses>
		<objectClass id="simpleSecurityObject">
		</objectClass>
		<objectClass id="zarafa-user">
		</objectClass>
		<objectClass id="inetOrgPerson">
		</objectClass>
	</objectClasses>
	<attributes>
		<attribute id="cn">
			<display>
				Common Name
			</display>
			<!-- <onchange>autoFill:%sn%,c%givenName%</onchange> -->
			<order>
				3
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="givenName">
			<display>
				First name
			</display>
			<icon>
				images/uid.png
			</icon>
			<onchange>
				autoFill:cn,%givenName% %sn%
			</onchange>
			<onchange>
				autoFill:mail,%givenName%.%sn%@DOMAIN
			</onchange>
			<onchange>
				autoFill:uid,%givenName%%sn%
			</onchange>
			<order>
				1
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="sn">
			<display>
				Last name
			</display>
			<onchange>
				autoFill:cn,%givenName% %sn%
			</onchange>
			<onchange>
				autoFill:mail,%givenName%.%sn%@DOMAIN
			</onchange>
			<onchange>
				autoFill:uid,%givenName%%sn%
			</onchange>
			<order>
				2
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="uid">
			<display>
				Login Name(UID)
			</display>
			<hint>
				required
			</hint>
			<onchange>
				autoFill:%uid%,c%givenName%
			</onchange>
			<order>
				4
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="userPassword">
			<display>
				Password
			</display>
			<helper>
				<default>
					md5
				</default>
				<display>
					Encryption
				</display>
				<id>
					enc
				</id>
				<location>
					side
				</location>
				<option>
					blowfish
				</option>
				<option>
					clear
				</option>
				<option>
					crypt
				</option>
				<option>
					ext_des
				</option>
				<option>
					md5
				</option>
				<option>
					md5crypt
				</option>
				<option>
					sha
				</option>
				<option>
					smd5
				</option>
				<option>
					ssha
				</option>
			</helper>
			<icon>
				images/lock.png
			</icon>
			<order>
				6
			</order>
			<page>
				1
			</page>
			<post>
				=php.Password(%enc%,%userPassword%)
			</post>
			<spacer>
				1
			</spacer>
			<type>
				password
			</type>
			<verify>
				1
			</verify>
		</attribute>
		<attribute id="telephoneNumber">
			<display>
				Work phone
			</display>
			<icon>
				images/phone.png
			</icon>
			<order>
				8
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="facsimileTelephoneNumber">
			<display>
				Fax
			</display>
			<order>
				9
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="mobile">
			<display>
				Mobile
			</display>
			<order>
				9
			</order>
			<page>
				1
			</page>
			<spacer>
				1
			</spacer>
		</attribute>
		<attribute id="mail">
			<display>
				Email
			</display>
			<order>
				5
			</order>
			<page>
				1
			</page>
		</attribute>
		<attribute id="zarafaAdmin">
			<display>
				Zarafa Administrator
			</display>
			<description>
				Is this user a Zarafa Administrator?
			</description>
			<order>
				1
			</order>
			<page>
				2
			</page>
		</attribute>
		<attribute id="zarafaQuotaWarn">
			<display>
				Quota Warning (MB)
			</display>
			<description>
				Send out a warning message if the user exceeds this value.
			</description>
			<order>
				2
			</order>
			<page>
				2
			</page>
		</attribute>
		<attribute id="zarafaQuotaSoft">
			<display>
				Soft Quota (MB)
			</display>
			<description>
				Disable sending of mail if the user exceeds this value.
			</description>
			<order>
				3
			</order>
			<page>
				2
			</page>
		</attribute>
		<attribute id="zarafaQuotaHard">
			<display>
				Hard Quota (MB)
			</display>
			<description>
				Disable sending and receiving of mail if the user exceeds this value.
			</description>
			<order>
				4
			</order>
			<page>
				2
			</page>
		</attribute>
		<attribute id="zarafaQuotaOverride">
			<display>
				Override Quota limits
			</display>
			<description>
				The Quota limits set above do not affect this user
			</description>
			<order>
				5
			</order>
			<page>
				2
			</page>
		</attribute>
	</attributes>
</template>
