# editorconfig tool configuration
# see http://editorconfig.org for docs

root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
trim_trailing_whitespaces = true

[{*.{yml,yaml},.yamllint}]
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_style = space
trim_trailing_whitespace = false

[Dockerfile*]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.ldif]
indent_style = space

# TODO skip ident_style for the konnect wrapper for the moment
[konnect/wrapper.sh]
ident_style = none
