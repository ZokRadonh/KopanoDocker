# editorconfig tool configuration
# see http://editorconfig.org for docs

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespaces = true
indent_style = tab

[{*.{yml,yaml},.yamllint}]
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
